@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Identity/Pages/_Layout.cshtml";
}

<h1>@ViewData[""]</h1>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="col-4">
                   <div class="form-floating mb-3">
                     <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="First Name" />
                     <label asp-for="Input.FirstName">First Name</label>
                     <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                   </div>
                </div>
                <div class="col-4">
                   <div class="form-floating mb-3">
                      <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="Last Name" />
                      <label asp-for="Input.LastName">Last Name</label>
                      <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row"> 
              @*   <div class="col-4">
                   <div class="form-floating mb-3">
                      <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="Ex:12345" />
                      <label asp-for="Input.PhoneNumber">Phone Number</label>
                      <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div> *@
               <div class="col-4">
                   <div class="form-floating mb-3">
                      <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                      <label asp-for="Input.Email">Email</label>
                      <span asp-validation-for="Input.Email" class="text-danger"></span>
                   </div>
               </div>
            </div>
          <div class="row">
              <div class="col-4">
                 <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="text" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label for="password" asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                 </div>
               </div>
              <div class="col-4">
  
               <div class="form-floating mb-3">
                  <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                  <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                  <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
               </div>
              </div>
          </div>
            <button id="registerSubmit" type="submit" class="w-50 btn btn-lg btn-primary">Register</button>
        </form>
   
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
